<div>
    <b>{{localize "ShadowdarkAXP.Award.Header"}}</b>
    <form>
         <div class="form-group">
            <label>{{localize "ShadowdarkAXP.Award.Reason"}}:</label>
            <select name="award-type">
                {{#if description}}
                <option selected value="{{description}}" data-xp="{{xp}}">{{description}}</option>
                {{/if}}
                <option value="Custom" data-xp="{{xp}}">{{localize "ShadowdarkAXP.Award.DescriptionPlaceholder"}}</option>
                <option value="{{localize "ShadowdarkAXP.Award.Treasures.Normal"}}" data-xp="1">{{localize "ShadowdarkAXP.Award.Treasures.Normal"}} 1 {{localize "ShadowdarkAXP.Award.Exp"}}</option>
                <option value="{{localize "ShadowdarkAXP.Award.Treasures.Fabulous"}}" data-xp="3">{{localize "ShadowdarkAXP.Award.Treasures.Fabulous"}} 3 {{localize "ShadowdarkAXP.Award.Exp"}}</option>
                <option value="{{localize "ShadowdarkAXP.Award.Treasures.Legendary"}}" data-xp="10">{{localize "ShadowdarkAXP.Award.Treasures.Legendary"}} 10 {{localize "ShadowdarkAXP.Award.Exp"}}</option>
            </select>
        </div>
        <div class="form-group">
            <label>{{localize "ShadowdarkAXP.Award.Action"}}:</label>
            {{numberInput xp name="xp" class="uninput" min=0 step=1}}
        </div>
        {{#if description}}
        <div class="shadowdark_awardxp_description form-group" style="visibility: hidden;">
        {{else}}
        <div class="shadowdark_awardxp_description form-group">
        {{/if}}
            <label>{{localize "ShadowdarkAXP.Award.Description"}}:</label>
            <input name="description" type="text" inputmode="text" placeholder="{{localize "ShadowdarkAXP.Award.DescriptionPlaceholder"}}" value="{{description}}">
        </div>
        <div>
        <p><b>{{localize "ShadowdarkAXP.Award.Destination"}}</b>:</p>  
        </div>

   <div class="destinations">
        {{#each destinations}}
        <div class="hero">
            <label>
                <input type="checkbox" name="destination.{{id}}" checked>
                <img class="token" src="{{{prototypeToken.texture.src}}}">
                <span class="name">{{name}}</span> 
            </label>
        </div>

        {{else}}
        <p class="no-destinations">{{localize "ShadowdarkAXP.Award.NoDestinations"}}</p>
        {{/each}}
    </div>


    <button type="submit" name="transfer" disabled>
        <i class="fa-solid fa-trophy"></i> {{localize "ShadowdarkAXP.Award.Action"}}
    </button>
    </form>

</div>